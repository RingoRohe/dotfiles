#
# Workspaces:
#
    set $ws1    1
    set $ws2    2
    set $ws3    3
    set $ws4    4
    set $ws5    5
    set $ws6    6
    set $ws7    7
    set $ws8    8
    set $ws9    9

    #navigate workspaces next / previous
    bindsym Ctrl+Mod1+Right workspace next
    bindsym Ctrl+Mod1+Left workspace prev

    # switch to workspace
    bindsym Ctrl+Mod1+1 workspace $ws1
    bindsym Ctrl+Mod1+2 workspace $ws2
    bindsym Ctrl+Mod1+3 workspace $ws3
    bindsym Ctrl+Mod1+4 workspace $ws4
    bindsym Ctrl+Mod1+5 workspace $ws5
    bindsym Ctrl+Mod1+6 workspace $ws6
    bindsym Ctrl+Mod1+7 workspace $ws7
    bindsym Ctrl+Mod1+8 workspace $ws8
    bindsym Ctrl+Mod1+9 workspace $ws9

    # Move focused container to workspace
    bindsym $mod+Shift+1 move container to workspace $ws1
    bindsym $mod+Shift+2 move container to workspace $ws2
    bindsym $mod+Shift+3 move container to workspace $ws3
    bindsym $mod+Shift+4 move container to workspace $ws4
    bindsym $mod+Shift+5 move container to workspace $ws5
    bindsym $mod+Shift+6 move container to workspace $ws6
    bindsym $mod+Shift+7 move container to workspace $ws7
    bindsym $mod+Shift+8 move container to workspace $ws8
    bindsym $mod+Shift+9 move container to workspace $ws9

    # Move to workspace with focused container
    bindsym Ctrl+Mod1+Shift+1 move container to workspace $ws1; workspace $ws1
    bindsym Ctrl+Mod1+Shift+2 move container to workspace $ws2; workspace $ws2
    bindsym Ctrl+Mod1+Shift+3 move container to workspace $ws3; workspace $ws3
    bindsym Ctrl+Mod1+Shift+4 move container to workspace $ws4; workspace $ws4
    bindsym Ctrl+Mod1+Shift+5 move container to workspace $ws5; workspace $ws5
    bindsym Ctrl+Mod1+Shift+6 move container to workspace $ws6; workspace $ws6
    bindsym Ctrl+Mod1+Shift+7 move container to workspace $ws7; workspace $ws7
    bindsym Ctrl+Mod1+Shift+8 move container to workspace $ws8; workspace $ws8
    bindsym Ctrl+Mod1+Shift+9 move container to workspace $ws9; workspace $ws9

    assign [class="firefox"] $ws1
    assign [class="Code"] $ws2
    assign [class="Evolution"] $ws9